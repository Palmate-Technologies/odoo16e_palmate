<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record id="test_view_employee_form" model="ir.ui.view">
            <field name="name">test.view_employee_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
             <xpath expr="//page/group/group/field[@name='user_id']" position="replace">
                <field name="user_id" string="Related User" 
                domain="[('company_ids', 'in', company_id)]" context="{'default_create_employee_id': id}" 
                widget="many2one_avatar_user"/>
            </xpath>
            </field>
        </record>
</odoo>