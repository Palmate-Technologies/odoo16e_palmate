<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Company Form -->
    <record id="view_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.form.header.footer</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <page name="general_info" position="after">
                <page string="Report Header">
                    <group>
                        <field name="image_header_file" widget="image"/>
                        <field name="company_address_html" string="Company Address"/>
                    </group>
                    <group>
                        <field name="image_footer_file" widget="image"/>
                    </group>
                </page>
            </page>
        </field>
    </record>

</odoo>