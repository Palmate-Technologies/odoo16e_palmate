<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="crm_lead_form_view_inherited">
            <field name="name">crm.lead.form.view.inherited</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <header>
                    <button
                        name="open_create_call_wizard"
                        id="open_create_call_wizard"
                        type="object"
                        string="Call"
                        icon="fa-phone"
                        class="text-start text-nowrap text-capitalize"
                        attrs="{'invisible': [('ziwo_show_c2c_d2c', '!=', True)]}"
                    />
                </header>
                <xpath expr="//label[@for='phone']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[field/@name='phone']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='lost_reason_id']" position="before">
                    <field name="ziwo_show_c2c_d2c" invisible="1"/>
                    <label for="partner_phone"/>
                    <div class="o_row">
                        <field name="partner_phone"/>
                        <button
                            name="create_new_call_phone"
                            id="create_new_call_phone"
                            type="object"
                            string="Call"
                            icon="fa-phone"
                            class="pull_right inline"
                            attrs="{'invisible': ['|', ('partner_phone', '=', False), ('ziwo_show_c2c_d2c', '!=', True)]}"
                        />
                    </div>
                    <label for="partner_mobile"/>
                    <div class="o_row">
                        <field name="partner_mobile"/>
                        <button
                            name="create_new_call"
                            id="create_new_call"
                            type="object"
                            string="Call"
                            icon="fa-phone"
                            class="pull_right inline"
                            attrs="{'invisible': ['|', ('partner_mobile', '=', False), ('ziwo_show_c2c_d2c', '!=', True)]}"
                        />
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>