<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="forge_ziwo.ZiwoSystrayItem" owl="1">
        <div>
            <a href="#" title="Display Dialing Panel" t-on-click.prevent="onClick">
                <img src="forge_ziwo/static/description/tray_icon.png" width="20" height="20"/>
            </a>
        </div>
    </t>

    <!-- <div style="height: 640px; width: 360px !important; position: fixed; right: 0;" class="ziwo_dial o_in_home_menu position-absolute w-100 h-100 flex-column ms-md-2 bottom-0 bg-white shadow d-print-none" t-name="forge_ziwo.ZiwoDialingPanel"> -->
    <div style="height: 640px; width: 360px !important; position: fixed; right: 0; bottom: 0;" class="ziwo_dial o_in_home_menu position-absolute flex-column bg-white shadow" t-name="forge_ziwo.ZiwoDialingPanel">
        <div class="ziwo_dial_fold position-relative bottom-0">
            <div class="ziwo_dial_window_title d-flex align-items-center cursor-pointer overflow-auto">
                <t t-call="forge_ziwo.ZiwoDialingPanel.HeaderContent">
                    <a t-set="title" t-value="&quot;Ziwo&quot;"/>
                </t>
            </div>
        </div>
        <div class="ziwo_dial_panel o_form_view flex-column border-start border-end overflow-hidden flex-grow-1">
            <iframe id="ziwoFrame" src="forge_ziwo/ziwo_component/" allow="camera *;microphone *" allowFullscreen="true" height="640" width="360" style="border: none"/>
        </div>
    </div>

    <t t-name="forge_ziwo.ZiwoDialingPanel.HeaderContent">
        <img src="forge_ziwo/static/description/tray_icon.png" class="ms-3 me-1 my-0" width="20" height="20"/>
        <div class="ziwo_dial_text flex-grow-1 mx-1 my-0" t-out="title"/>
        <a aria-label="Close" class="ziwo_dial_window_close d-flex align-items-center h-100 m-0 px-3 py-0 border-0 opacity-50 opacity-100-hover text-reset" href="#" title="Close">
            <i class="fa fa-close"/>
        </a>
    </t>

</templates>
