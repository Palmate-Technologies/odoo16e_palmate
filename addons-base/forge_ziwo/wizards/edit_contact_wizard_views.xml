<odoo>
    <data>
        <record id="view_edit_contact_wizard" model="ir.ui.view">
            <field name="name">edit.contact.wizard.form</field>
            <field name="model">edit.contact.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="change_name"/>
                                <field name="change_parent_id"/>
                            </group>
                            <group>
                                <field name="change_phone"/>
                                <field name="change_mobile"/>
                                <field name="change_email"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="save_changes" string="Save" type="object" class="btn-primary" icon="fa-pencil" />
                        <button name="cancel" string="Cancel" type="object" class="btn-secondary" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>